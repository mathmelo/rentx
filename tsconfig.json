{
  "compilerOptions": {
    "target": "es2016",                                  
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                    
    "module": "commonjs",                                
    "baseUrl": "./src",                                 
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@util/*": ["util/*"],
      "@errors/*": ["errors/*"],
      "@database/*": ["database/*"],
    },                                      
    "resolveJsonModule": true,                       
    "outDir": "./dist",                                  
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "skipLibCheck": true                                
  },
  "exclude": [
    "./node_modules/**/*",
    "./dist/**/*"
  ]
}
